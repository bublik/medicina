<%= render :partial => 'profile_menu'%>

<div id='state'></div>
<% form_remote_for(:change_password,
  :url => { :controller => 'users', :action => 'save_password', :id => current_user},
  :position => "top" ) do %>
  <!--[form:users]-->
  <table class="w50proc border" >
    <tr><th colspan="2"><h1><%= t('user.change_password_title') %></h1></th></tr>
    <tr><td><%= t('user.old_password') %></td>
    <td><input type="password"  size="15" name="password" value="<%= params[:password] %>"/></td></tr>
    <tr><td><%= t('user.new_password') %></td>
    <td><input type="password"  size="15" name="new_password" value="<%= params[:new_password] %>"/></td></tr>
    <tr><td><%= t('user.confirm_password') %></td>
    <td><input type="password"  size="15" name="re_password" value="<%= params[:re_password] %>"/></td></tr>
    <tr><td colspan="2"><%= submit_tag t('general.save') %></td></tr>
  </table>
  <!--[eoform:users]-->
<% end %>
