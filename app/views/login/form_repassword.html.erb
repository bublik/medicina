<div id="activation">
  <% form_remote_for(:user,:url=>{:controller=>'login',:action=>'repassword'}) do -%>
    <table class="w450px">
      <tr><th colspan="2"><%= t('general.request_password')%> </th></tr>
      <tr>
        <td><%= t('general.enter_your_login') -%>:</td>
        <td> <%= text_field "user", "login", "size" => 20 %> </td>
      </tr>
      <tr>
        <td colspan="2" class="c"><%= submit_tag(t('general.send')) %></td>
      </tr>
    </table>
  <% end -%>
</div>