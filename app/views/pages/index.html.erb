<% @pages.each do |page| %>
  <%= link_to t('general.create'), new_page_path if is_admin? %>
  <div><%= link_to page.title, page, :title => page.title %>
    <% if is_admin? %>
      <%= link_to t('general.edit'), edit_page_path(page) %>
      <%= link_to t('general.destroy'), page, :confirm => 'Are you sure?', :method => :delete %>
    <% end -%>
  </div>
<% end %>
