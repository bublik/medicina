<%= render :partial => '/admin/menu'%>
<h1>Новая категория</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_area :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_area :title %>
  </p>
  <p>
    <b>Показывать на первой</b><br />
    <%= f.check_box :first_page %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
