<%= render :partial => '/admin/menu'%>
<h1>Список категорий</h1>

<table>
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th>Показывать на главной</th>
    <th colspan="3">Управление</th>
  </tr>
  
  <% for category in @categories %>
    <tr>
      <td><%=h category.name %>
      </td>
      <td><%=h category.title %></td>
      <td>
        <% div_for(category, :class => 'b') do %>
          <%= category.first_page ? link_to_remote(image_tag('/images/ico/icon_accept.gif'),:url => admin_cats_state_path(category)) : link_to_remote(image_tag('/images/ico/delete.gif'), :url => admin_cats_state_path(category))%>
        <% end %>
      </td>
      <td>
      <%= link_to 'Show',  admin_category_path(category) %></td>
      <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
      <td><%= link_to 'Destroy', admin_category_path(category), :confirm => t('general.are_you_sure'), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New category', new_category_path %>
