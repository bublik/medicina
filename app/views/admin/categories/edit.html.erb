<h1>Editing category</h1>

<%= error_messages_for :category %>

<% form_for([:admin, @category]) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <b>Показывать на первой</b><br />
    <%= f.check_box :first_page %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', admin_categories_path %>
